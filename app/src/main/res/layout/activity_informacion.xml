<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/safari3"
    tools:context="com.example.kevin.juegomuseo.Informacion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="170dp"
        android:layout_height="29dp"
        android:layout_marginBottom="476dp"
        android:layout_marginEnd="163dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="16dp"
        android:text="Jugando Con los Animales"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="164dp"
        android:layout_height="18dp"
        android:layout_marginBottom="443dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="9dp"
        android:text="¿Qué es un diorama?"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="359dp"
        android:layout_height="58dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:text="Tipo de maqueta que muestra figuras humanas, vehículos y animales, presentados dentro de un entorno y con el propósito de representar una escena."
        android:textAlignment="viewStart"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="173dp"
        android:layout_height="23dp"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="195dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="¿Qué es un habitat?"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="352dp"
        android:layout_height="54dp"
        android:layout_marginBottom="284dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Espacio que reúne las condiciones adecuadas para que la especie pueda residir y reproducirse, perpetuando su presencia. "
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="115dp"
        android:layout_height="17dp"
        android:layout_marginBottom="257dp"
        android:layout_marginEnd="240dp"
